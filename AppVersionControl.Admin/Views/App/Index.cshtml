@section pageheader{
    <div class="page-header">
        <h1>
            APP管理
            <small>
                <i class="icon-double-angle-right"></i>
                所有APP
            </small>
        </h1>
    </div>
}
@section jquery_gritter_css{

}
@section customizeheader{
    <script src="http://staticfile.aiwsb.com/libs/ko_pager/1.0.0/ko-pager.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            init();
            $("#btnSearch").click(function () {
                init(1);
            });
        });
        function init(pageindex) {
            //异步加载列表参数
            var option = {
                url: '@Url.Action("index","app")',//ajax url
                eleid: 'app-list',//列表的容器ID
                //pagesize:10,//每页数据条数
                enablePaginate: true,//是否开启分页
                //errorfunc:function(str){},//出现错误时的回调
                //success:function(){},//执行成功的回调
                //ajax请求时携带的参数，可以使用query:$("#form1").serialize()
                query: {

                }
            };
            //加载指定页码的数据
            if (pageindex && pageindex > 0) {
                option.pageindex = pageindex;
            }
            //执行分页列表加载
            $.DT.init(option);
        }

    </script>
}





<form id="form1" name="form1">
    <div class="row">
        <div class="col-xs-12 col-sm-3 form-group">
            <label class="col-xs-12 col-sm-3">APP名称</label>
            <div class="col-sm-9 col-xs-12">
                <select name="appid" id="appid" class="col-xs-12">
                    <option value="-1">===所有APP===</option>
                    <option value="2">英雄会Android</option>
                </select>
            </div>
        </div>
        <div class="col-xs-12 col-sm-3">
            <button type="button" class="btn btn-sm btn-primary" id="btnSearch" name="btnSearch">
                <i class="icon-search"></i>
                查询
            </button>
        </div>
    </div>
</form>
<div class="alert alert-success"></div>
<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped table-bordered table-hover dataTable" id="app-list">
            <thead>
                <tr>
                    <th style="width:10%">编号</th>
                    <th style="width:15%">APP名称</th>
                    <th style="width:35%">下载单页</th>
                    <th style="width:10%">创建时间</th>
                    <th style="width:10%">是否删除</th>
                    <th style="width:20%">操作</th>
                </tr>
            </thead>
            <tbody data-bind="template:{name:'app-item-template',foreach:Data}"></tbody>
        </table>
    </div>
</div>
<script type="text/x-jquery-tmpl" id="app-item-template">
    <tr>
        <td data-bind="text:app_id"></td>
        <td data-bind="text:cn_name"></td>
        <td data-bind="text:download_url"></td>
        <td data-bind="text:createtime"></td>
        <td>
            <span class="label label-success" data-bind="visible:is_del==0">正常</span>
            <span class="label label-danger" data-bind="visible:is_del==1">已删除</span>
        </td>
        <td></td>
    </tr>
</script>
